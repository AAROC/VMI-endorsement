{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "disk_size": 8000,
    "iso_url": "http://centos.cadt.com/6/isos/x86_64/CentOS-6.7-x86_64-netinstall.iso",
    "iso_checksum": "411da8c3f66839eef9ae47bf4515cc0b82f2a1dfc7b2d5bde2d203ca7e3220f3",
    "iso_checksum_type": "sha256",
    "ssh_username": "root",
    "ssh_password": "rootpassword",
    "ssh_wait_timeout": "90m",
    "shutdown_command": "shutdown -h now",
    "http_directory": "httpdir",
    "http_port_min": 8500,
    "http_port_max": 8550,
    "vboxmanage": [ ["modifyvm", "{{.Name}}", "--memory", "1024"] ],
    "boot_command": [
        "<esc>",
        " linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-6.cfg",
        "<enter>"
    ],
    "format": "ova",
    "vm_name": "centos.6.20160428"
  }],
  "provisioners": [
    {
        "type": "file",
        "source": "provisioners/cloud.cfg",
        "destination": "/root/cloud.cfg"
    },
    {
        "type": "file",
        "source": "provisioners/sudoers",
        "destination": "/root/sudoers"
    },
    {
        "type": "file",
        "source": "provisioners/cloud-init.patch",
        "destination": "/root/cloud-init.patch"
    },
    {
        "type": "file",
        "source": "provisioners/sshd_config",
        "destination": "/root/sshd_config"
    },
    {
        "type": "shell",
        "script": "provisioners/script.sh"
    }
  ]
}
