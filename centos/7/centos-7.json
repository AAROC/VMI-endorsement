{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "disk_size": 8000,
    "iso_url": "http://centos.cadt.com/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1511.iso",
    "iso_checksum": "9ed9ffb5d89ab8cca834afce354daa70a21dcb410f58287d6316259ff89758f5",
    "iso_checksum_type": "sha256",
    "ssh_username": "root",
    "ssh_password": "rootpassword",
    "ssh_wait_timeout": "90m",
    "shutdown_command": "shutdown -h now",
    "http_directory": "httpdir",
    "http_port_min": 8500,
    "http_port_max": 8550,
    "vboxmanage": [ ["modifyvm", "{{.Name}}", "--memory", "1024"] ],
    "boot_command": [
        "<esc>",
        " linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.cfg",
        "<enter>"
    ],
    "format": "ova",
    "vm_name": "centos.7.2016.09.20"
  }],
  "provisioners": [
    {
        "type": "file",
        "source": "provisioners/cloud.cfg",
        "destination": "/root/cloud.cfg"
    },
    {
        "type": "file",
        "source": "provisioners/sshd_config",
        "destination": "/root/sshd_config"
    },
    {
        "type": "shell",
        "script": "provisioners/script.sh"
    }
  ]
}
